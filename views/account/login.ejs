<!-- try to use the other methods to populate it -->
<% if (title) { %>
    <h1><%= title %></h1>
    
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
      <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
      <%  }) %>
  </ul>
<% } %>
<form action="/account/login" method="POST">
  <label for="account_email">Email:</label>
  <input type="email" name="account_email" id="account_email" required value="<%= locals.account_email %>">

  <label for="account_password">Password:</label>
        <span class="form-note"> The password must be minimum 12 characters in length, contain at least 1 capital letter, 1 number, and at least 1 special character</span>
        <input type="password" name="account_password" id="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" title="Password must be minimum 12 characters in length, contain at least 1 capital letter, 1 number, and at least 1 special character">

  <button type="submit">Login</button>
</form>

<p>Don't have an account? <a href="/account/register">Register here</a></p>